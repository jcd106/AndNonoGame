<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBCA">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jcdug.andnonogame.TutorialActivity">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_bar"
        android:id="@+id/back_button_tutorial"
        android:layout_gravity="left"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onClicked" />

    <TextView
        android:text="How To Play Nonograms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionTitle"
        android:layout_below="@+id/back_button_tutorial"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#000000"/>

    <TextView
        android:text="Numbers, shown on the left and above the puzzle, describe the groups of painted squares (which go in sequence, no blanks) horizontally and vertically accordingly. \n\nThe order of these numbers describes the order of location of these groups, but it is unknown where each group starts and finishes (in fact it is the task of the puzzle to define their location). \n\nEach separate number means a separate group of the given size (i.e. number 5 – means a group of five painted squares in sequence, 1 – a group of only one painted square). \n\nBetween the groups there should be at least one unpainted square (otherwise they would make one group). \n\n(Taken from www.nonograms.org/instructions)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intsructionText"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/instructionTitle"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>